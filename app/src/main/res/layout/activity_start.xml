<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MyerListGray"
    android:clipToPadding="true"
    >

    <ImageView
        android:id="@+id/activity_start_mask"
        android:layout_width="match_parent"
        android:layout_height="24sp"
        android:layout_alignParentTop="true"
        android:alpha="0.15"
        android:elevation="@dimen/statusbar_elevation"
        android:scaleType="fitXY"
        android:src="@drawable/black_mask" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:src="@drawable/backgrd" />

    <LinearLayout
        android:id="@+id/activity_start_root_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_start_logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="160sp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="logo"
            android:src="@drawable/icon" />

        <LinearLayout
            android:id="@+id/activity_start_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/myer"
                android:textColor="@color/MyerListBlue"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-bold"
                android:gravity="center"
                android:text="@string/list"
                android:textColor="@color/MyerListBlue"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_start_subtitle_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/FontLight"
            android:gravity="center"
            android:text="@string/Subtitle"
            android:textColor="@color/MyerListBlueLight"
            android:textSize="15sp" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_start_loginBtn_cv"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="30sp"
            card_view:cardBackgroundColor="@color/MyerListBlueLight"
            card_view:cardCornerRadius="2sp"
            card_view:cardElevation="2sp">

            <Button
                android:id="@+id/activity_start_login_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:padding="0dp"
                android:text="@string/loginBtn"
                android:textColor="#ffffff" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_start_registerBtn_cv"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:background="#ffdbdbdb"
            card_view:cardBackgroundColor="#ffdbdbdb"
            card_view:cardCornerRadius="2sp"
            card_view:cardElevation="2sp">

            <Button
                android:id="@+id/activity_start_register_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:padding="0dp"
                android:text="@string/registerBtn"
                android:textColor="@android:color/background_dark" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_start_offline_cv"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:background="#ffc5c5c5"
            card_view:cardBackgroundColor="#ffdbdbdb"
            card_view:cardCornerRadius="2sp"
            card_view:cardElevation="2sp">

            <Button
                android:id="@+id/activity_start_offline_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:text="@string/offlineBtn"
                android:textColor="@android:color/background_dark" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>

