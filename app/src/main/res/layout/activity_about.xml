    </LinearLayout>
    </LinearLayout>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:onClick="EmailClick"
        android:layout_width="15sp"
        android:layout_height="15sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150sp"
        android:layout_marginLeft="10sp"
        fab:fab_icon="@drawable/email"
        fab:fab_colorNormal="@android:color/white"
        fab:fab_colorPressed="@color/MyerListGray"
        fab:fab_elevation="0dp"
        fab:fab_animDuration="700"
        android:background="#ff66cde8"/>
</RelativeLayout>

