<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_card_view"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cateitem_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="80sp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <view.CircleView
                android:id="@+id/cateitem_circleView"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginLeft="20sp" />

            <EditText
                android:id="@+id/cateitem_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:background="@drawable/shape_edited_text_tran_backgrd"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <GridLayout
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"
            android:columnCount="2">

            <!--<ImageView-->
                <!--android:layout_width="30sp"-->
                <!--android:layout_height="30sp"-->
                <!--android:layout_column="0"-->
                <!--android:layout_marginRight="10sp"-->
                <!--android:src="@drawable/delete2" />-->

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_column="1"
                android:src="@drawable/ham" />
        </GridLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>