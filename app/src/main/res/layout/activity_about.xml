<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="fragment.AboutFragment"
              android:background="@android:color/white"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="-10sp"
            android:layout_marginTop="-10sp"
            android:layout_marginRight="-10sp"
            card_view:cardCornerRadius="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:background="@color/MyerListBlueLight">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:text="ABOUT"
                    android:textSize="30sp"
                    android:gravity="left"
                    android:textColor="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5sp"/>


            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10sp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VERSION"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/MyerListBlueLight"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.6"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:fontFamily="@string/FontLight"
                    android:layout_marginLeft="10sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:layout_marginLeft="10sp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CREDIT"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/MyerListBlueLight"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JuniperPhoton"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:fontFamily="@string/FontLight"
                    android:layout_marginLeft="10sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:layout_marginLeft="10sp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FEEDBACK"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/MyerListBlueLight"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feel free to send me an email."
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:fontFamily="@string/FontLight"
                    android:layout_marginLeft="10sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_marginLeft="10sp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABOUT MYERLIST"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/MyerListBlueLight"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is an Universal App which targets not only on Android but also Windows 8.1 and  Windows Phone 8.1. That means you  can sync all your to-dos over all of your PCs and phones. It is quite simple but effective. "
                    android:gravity="left"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:fontFamily="@string/FontLight"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_marginLeft="10sp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DONATE"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/MyerListBlueLight"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maintaining the app cost my time and energy, if you do want to support the developer, you can donate some money via Alipay after emailing me the account."
                    android:gravity="left"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:fontFamily="@string/FontLight"

                    />
            </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:onClick="EmailClick"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160sp"
        android:layout_marginLeft="10sp"
        fab:fab_icon="@drawable/email"
        fab:fab_colorNormal="@android:color/white"
        fab:fab_colorPressed="@color/MyerListGray"/>
</RelativeLayout>

