<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.TranslucentStatusBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/MyerListBlueLight</item>
        <item name="colorPrimaryDark">@color/MyerListBlue</item>
        <item name="colorAccent">@color/MyerListBlue</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:navigationBarColor">@color/myNavigationColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/MyerListGray</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Theme.AppCompat.TranslucentStatusBar" parent="Base.Theme.AppCompat.FengMoe">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.AppCompat.Light.TranslucentStatusBar" parent="Base.Theme.AppCompat.Light.FengMoe">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.AppCompat.Light.DarkActionBar.TranslucentStatusBar"
           parent="Base.Theme.AppCompat.Light.DarkActionBar.FengMoe">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
