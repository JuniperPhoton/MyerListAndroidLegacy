<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dialog_title">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50sp"
        >
        <TextView
            android:id="@+id/dialog_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD A MEMO"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25sp"
            android:textColor="@color/MyerListBlueLight"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>

        <EditText
            android:id="@+id/newMemoEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:hint="e.g. Drop by my friends when I get off work."
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_marginRight="10sp"
                card_view:cardBackgroundColor="@color/MyerListBlueLight"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="3dp"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/add_ok_btn"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:text="OK"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0sp"
                android:layout_weight="1"
                card_view:cardBackgroundColor="@color/MyerListGrayDark"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="3dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/add_cancel_btn"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:text="CANCEL"
                    android:textColor="@android:color/black"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="2sp"></RelativeLayout>

</LinearLayout>

