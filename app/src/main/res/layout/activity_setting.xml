<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/MyerListGray"
                tools:context="activity.SettingActivity">

    <ImageView
        android:id="@+id/activity_setting_mask"
        android:layout_width="match_parent"
        android:layout_height="24sp"
        android:layout_alignParentTop="true"
        android:alpha="0.15"
        android:elevation="@dimen/statusbar_elevation"
        android:scaleType="fitXY"
        android:src="@drawable/black_mask"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="-10sp"
                  android:layout_marginRight="-10sp"
                  android:layout_marginTop="-10sp"
                  android:orientation="vertical"
                  android:paddingBottom="0dp"
                  android:paddingLeft="0dp"
                  android:paddingRight="0dp"
                  android:paddingTop="0dp"
                  tools:context="com.ex.SettingActivity">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150sp"

                android:background="@color/MyerListBlueLight">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.4"
                    android:scaleType="matrix"
                    android:src="@drawable/backgrd"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:text="@string/settings"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="normal"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/white"
                      android:orientation="vertical"
                      android:paddingBottom="0dp"
                      android:paddingTop="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:text="@string/user_hobbit_block"
                android:textColor="@color/MyerListBlueLight"
                android:textSize="15sp"
                android:textStyle="normal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/tap_keyboard_block"
                        android:textColor="@android:color/black"/>

                    <com.rey.material.widget.Switch
                        android:id="@+id/ShowKeyboardSwitch"
                        style="@style/Material.Widget.Switch"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:checked="true"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="25sp"
                    android:layout_marginTop="10sp"
                    android:scaleType="fitXY"
                    android:src="@drawable/line_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/tap_bottom_block"
                        android:textColor="@android:color/black"/>

                    <com.rey.material.widget.Switch
                        android:id="@+id/AddToBottomSwitch"
                        style="@style/Material.Widget.Switch"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:checked="true"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="10sp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/hand_hobbit_block"
                        android:textColor="@android:color/black"/>

                    <com.rey.material.widget.Switch
                        android:id="@+id/hand_hobbit_switch"
                        style="@style/Material.Widget.Switch"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:checked="true"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="20sp"
                android:text="@string/lang_block"
                android:textColor="@color/MyerListBlueLight"
                android:textSize="15sp"
                android:textStyle="normal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lang_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="0sp"
                    android:layout_marginRight="10sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="20sp"
                    android:text="English"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="20sp"
                android:text="@string/account_concern"
                android:textColor="@color/MyerListBlueLight"
                android:textSize="15sp"
                android:textStyle="normal"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@android:color/transparent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/logout_text"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="0sp"
                    android:layout_marginRight="10sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="20sp"
                    android:text="@string/logout"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>