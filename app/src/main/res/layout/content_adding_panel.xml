<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_adding_pane_root_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MyerListBlue"
    android:orientation="vertical"
    android:visibility="invisible">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:contentDescription="@string/image_const"
        android:src="@drawable/backgrd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_adding_pane_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:height="50dp"
                android:gravity="center_vertical"
                android:text="@string/adding_title"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="#30000000">

                <TextView
                    android:id="@+id/fragment_adding_pane_cate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="ALL"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </LinearLayout>

        <include
            android:id="@+id/fragment_adding_pane_radio"
            layout="@layout/radio_add_select_cate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="20dp" />

        <EditText
            android:id="@+id/fragment_adding_pane_add_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:elegantTextHeight="true"
            android:hint="@string/adding_hint"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/TextHintColor"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/fragment_adding_pane_btns_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/fragment_adding_pane_ok_btn_cardview"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="15sp"
                    card_view:cardBackgroundColor="#33FFFFFF"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="0dp">

                    <Button
                        android:id="@+id/fragment_adding_pane_pane_ok_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:text="@string/ok_btn"
                        android:textColor="@color/MyerListGray"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/fragment_adding_pane_cancel_btn_cv"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    card_view:cardBackgroundColor="#10000000"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="0dp">

                    <Button
                        android:id="@+id/fragment_adding_pane_cancel_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:text="@string/cancel_btn"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

